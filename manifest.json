{
    "manifest_version": 2,
    "name": "Sentiment Forecast",
    "description": "This extension gives you sentiment forecast of a webpage",
    "version": "1.0",

    "browser_action": {
        "default_popup":"popup.html"
    },

    "icons": { 
      "16": "daisy_16.png",
      "48": "daisy_48.png",
     "128": "daisy_128.png" 
    },
        "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["jquery.js","content.js"]
        }
      ],
    "browser_action": {
      "default_popup": "popup.html"
    },

    "permissions":["activeTab"]

}